EXTRA_ARGS=$@

cmake \
-D MPI_CXX_COMPILER:FILEPATH=/Users/bmpersc/bin/mpich2-1.0.8/bin/mpicxx \
-D MPI_C_COMPILER:FILEPATH=/Users/bmpersc/bin/mpich2-1.0.8/bin/mpicc \
-D MPI_FORTRAN_COMPILER:FILEPATH=/Users/bmpersc/bin/mpich2-1.0.8/bin/mpif77 \
-D Trilinos_WARNINGS_AS_ERRORS_FLAGS:STRING="" \
-D TPL_ENABLE_MPI:BOOL=ON \
  -D MPI_BASE_DIR:PATH=/Users/bmpersc/bin/mpich2-1.0.8 \
-D HAVE_GCC_ABI_DEMANGLE:BOOL=ON \
-D DART_TESTING_TIMEOUT:STRING=600 \
-D CMAKE_VERBOSE_MAKEFILE:BOOL=TRUE \
-D Trilinos_ENABLE_ALL_PACKAGES:BOOL=ON \
-D Trilinos_ENABLE_TESTS:BOOL=ON \
$EXTRA_ARGS \
../


