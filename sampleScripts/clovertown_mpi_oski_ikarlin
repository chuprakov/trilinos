--prefix=${PWD} \
--with-mpi-compilers="/opt/openmpi-1.2.3/intel/bin/" \
--cache-file=config.cache \
--with-gnumake \
--disable-default-packages \
--enable-examples \
--enable-tests \
--enable-epetra \
--enable-amesos \
--enable-amesos-klu \
--enable-aztecoo \
