--enable-kokkos \
--enable-epetraext \
--enable-galeri \
--enable-ifpack \
--enable-ml \
--enable-teuchos \
--enable-ifpack-ml \
--enable-epetra-prerelease \
--with-blas="/opt/intel/mkl/9.1/lib_serial/em64t/libmkl.so" \
--with-lapack="/opt/intel/mkl/9.1/lib_serial/em64t/libmkl_lapack.so" \
--with-libs="/home/ikarlin/Oski/installblas/lib/oski/liboski.a" \
--with-incdirs="-I/home/ikarlin/Oski/installblas/include/" \
--with-oski 
