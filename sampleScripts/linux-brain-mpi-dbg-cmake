#!/bin/bash

EXTRA_ARGS=$@

TRILINOS_SRC_DIR=../../Trilinos

cmake \
-D Trilinos_CONFIGURE_OPTIONS_FILE=$TRILINOS_SRC_DIR/sampleScripts/linux-brain-mpi-dbg-options.cmake \
-D CMAKE_INSTALL_PREFIX:PATH=$HOME/PROJECTS/install/trilinos/mpi/dbg \
$EXTRA_ARGS \
$TRILINOS_SRC_DIR

