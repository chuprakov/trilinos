#np# List dependencies like this.
include @abs_top_builddir@/../teuchos/Makefile.export.teuchos
include @abs_top_builddir@/../sacado/Makefile.export.sacado

#np# List all -I's required for this package.  -I's for other packages (both
#np# dependencies and optional dependencies) should be listed via the 
#np# corresponding _INCLUDES macros
_PHALANX_INCLUDES = -I@abs_top_srcdir@/src -I@abs_top_builddir@/src \
		   $(SACADO_INCLUDES) \
		   $(TEUCHOS_INCLUDES)

#np# List all -L's required for this package.  -L's for other packages (both 
#np# dependencies and optional dependencies) should be listed via the 
#np# corresponding _LIBS macros
_PHALANX_LIBS     = @LDFLAGS@ -L@abs_top_builddir@/src -lphalanx \
	 	   $(SACADO_LIBS) $(TEUCHOS_LIBS) $(LIBS) $(BLAS_LIBS) $(FLIBS)

#np# Nothing needs to be changed below, other than using the name of the
#np# package instead of PHALANX, but be sure to include the
#np# strip_dup_incl_paths.pl and strip_dup_libs.pl scripts in config/
@USING_GNUMAKE_TRUE@PHALANX_INCLUDES  = $(shell @PERL_EXE@ @abs_top_srcdir@/config/strip_dup_incl_paths.pl $(_PHALANX_INCLUDES))
@USING_GNUMAKE_TRUE@PHALANX_LIBS      = $(shell @PERL_EXE@ @abs_top_srcdir@/config/strip_dup_libs.pl $(_PHALANX_LIBS))

@USING_GNUMAKE_FALSE@PHALANX_INCLUDES = $(_PHALANX_INCLUDES)
@USING_GNUMAKE_FALSE@PHALANX_LIBS     = $(_PHALANX_LIBS)

PHALANX_TEST_INCLUDES = -I@abs_top_srcdir@/test/Utilities $(PHALANX_INCLUDES)
PHALANX_TEST_LIBS = -L@abs_top_builddir@/test/Utilities -lphalanx_utilities $(PHALANX_LIBS)