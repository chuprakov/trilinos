##########################################
### Required Trilinos Package Dependencies
##########################################
@INSIDE_TRILINOS_TRUE@include @abs_top_builddir@/../teuchos/Makefile.export.teuchos
@INSIDE_TRILINOS_FALSE@include @TEUCHOS_HEADER_DIR@/Makefile.export.teuchos

###################################################
### Optional Trilinos Package Dependencies
###################################################

@BUILD_LIBNOXEPETRA_TRUE@include @abs_top_builddir@/../epetra/Makefile.export.epetra
@BUILD_LIBNOXEPETRA_TRUE@include @abs_top_builddir@/../aztecoo/Makefile.export.aztecoo
@BUILD_LIBNOXEPETRA_TRUE@include @abs_top_builddir@/../ifpack/Makefile.export.ifpack
@BUILD_NOX_EPETRAEXT_SUPPORT_TRUE@include @abs_top_builddir@/../epetraext/Makefile.export.epetraext
@BUILD_NOX_EPETRA_ML_SUPPORT_TRUE@include @abs_top_builddir@/../ml/Makefile.export.ml
@BUILD_LIBNOXBELOS_TRUE@include @abs_top_builddir@/../belos/Makefile.export.belos
@BUILD_LOCAANASAZI_TRUE@include @abs_top_builddir@/../anasazi/Makefile.export.anasazi
@BUILD_LIBNOXTHYRA_TRUE@include @abs_top_builddir@/../thyra/Makefile.export.thyra
@BUILD_LIBNOXTHYRA_TRUE@include @abs_top_builddir@/../stratimikos/Makefile.export.stratimikos

###################################################
### NOX/LOCA Optional Libraries
###################################################

@BUILD_LIBNOXLAPACK_TRUE@NOX_LAPACK_LIB = -L@abs_top_builddir@/src-lapack  -lnoxlapack
@BUILD_LIBNOXEPETRA_TRUE@NOX_EPETRA_LIB = -L@abs_top_builddir@/src-epetra  -lnoxepetra
@BUILD_LIBNOXPETSC_TRUE@NOX_PETSC_LIB = -L@abs_top_builddir@/src-petsc  -lnoxpetsc
@BUILD_LIBNOXBELOS_TRUE@NOX_BELOS_LIB = -L@abs_top_builddir@/src-belos  -lnoxbelos
@BUILD_LIBNOXTHYRA_TRUE@NOX_THYRA_LIB = -L@abs_top_builddir@/src-thyra  -lnoxthyra

@BUILD_LIBLOCALAPACK_TRUE@LOCA_LAPACK_LIB = -L@abs_top_builddir@/src-loca/src-lapack  -llocalapack
@BUILD_LIBLOCAEPETRA_TRUE@LOCA_EPETRA_LIB = -L@abs_top_builddir@/src-loca/src-epetra  -llocaepetra
@BUILD_LIBLOCATHYRA_TRUE@LOCA_THYRA_LIB = -L@abs_top_builddir@/src-loca/src-thyra  -llocathyra
@BUILD_LIBLOCAMF_TRUE@LOCA_MF_LIB = -L@abs_top_builddir@/src-loca/src-mf  -llocamf
@BUILD_LIBLOCAMF_TRUE@MF_INCLUDES = -I@MF_INCDIR@
@BUILD_LIBLOCAMF_TRUE@MF_LIB = -L@MF_LIBDIR@ @MF_LIBS@

##########################
# NOX defines
##########################

NOX_INCLUDES_BASE = \
               -I@abs_top_builddir@/src -I@abs_top_srcdir@/src \
               -I@abs_top_srcdir@/src-lapack \
               -I@abs_top_srcdir@/src-epetra \
               -I@abs_top_srcdir@/src-petsc \
               -I@abs_top_srcdir@/src-belos \
               -I@abs_top_srcdir@/src-thyra \
               $(TEUCHOS_INCLUDES) \
               $(EPETRA_INCLUDES) \
               $(AZTECOO_INCLUDES) \
               $(IFPACK_INCLUDES) \
               $(EPETRAEXT_INCLUDES) \
               $(ML_INCLUDES) \
               $(BELOS_INCLUDES) \
	       $(THYRA_INCLUDES) \
               $(STRATIMIKOS_INCLUDES)
@USING_GNUMAKE_TRUE@NOX_INCLUDES = $(shell @PERL_EXE@ @abs_top_srcdir@/config/strip_dup_incl_paths.pl $(NOX_INCLUDES_BASE))
@USING_GNUMAKE_FALSE@NOX_INCLUDES = $(NOX_INCLUDES_BASE)

NOX_LIBS_BASE = @LDFLAGS@ $(NOX_LAPACK_LIB) $(NOX_EPETRA_LIB) $(NOX_PETSC_LIB) $(NOX_BELOS_LIB) $(NOX_THYRA_LIB) -L@abs_top_builddir@/src -lnox $(STRATIMIKOS_LIBS) $(THYRA_LIBS) $(BELOS_LIBS) $(ML_LIBS) $(EPETRAEXT_LIBS) $(IFPACK_LIBS) $(AZTECOO_LIBS) $(EPETRA_LIBS) $(TEUCHOS_LIBS) @LIBS@ @FLIBS@
@USING_GNUMAKE_TRUE@NOX_LIBS = $(shell @PERL_EXE@ @abs_top_srcdir@/config/strip_dup_libs.pl $(NOX_LIBS_BASE))
@USING_GNUMAKE_FALSE@NOX_LIBS = $(NOX_LIBS_BASE)

##########################
# LOCA defines
##########################

LOCA_INCLUDES_BASE = \
               -I@abs_top_srcdir@/src-loca/src \
               -I@abs_top_srcdir@/src-loca/src-lapack \
               -I@abs_top_srcdir@/src-loca/src-epetra \
	       -I@abs_top_srcdir@/src-loca/src-thyra \
               -I@abs_top_srcdir@/src-loca/src-mf \
               $(NOX_INCLUDES) \
               $(ANASAZI_INCLUDES) \
               $(MF_INCLUDES)
@USING_GNUMAKE_TRUE@LOCA_INCLUDES = $(shell @PERL_EXE@ @abs_top_srcdir@/config/strip_dup_incl_paths.pl $(LOCA_INCLUDES_BASE))
@USING_GNUMAKE_FALSE@LOCA_INCLUDES = $(LOCA_INCLUDES_BASE)

LOCA_LIBS_BASE = @LDFLAGS@ $(LOCA_LAPACK_LIB) $(LOCA_EPETRA_LIB) $(LOCA_THYRA_LIB) $(LOCA_MF_LIB) -L@abs_top_builddir@/src-loca/src -lloca $(NOX_LAPACK_LIB) $(NOX_EPETRA_LIB) $(NOX_PETSC_LIB) $(NOX_BELOS_LIB) $(NOX_THYRA_LIB) -L@abs_top_builddir@/src -lnox $(STRATIMIKOS_LIBS) $(THYRA_LIBS) $(ANASAZI_LIBS) $(BELOS_LIBS) $(ML_LIBS) $(EPETRAEXT_LIBS) $(IFPACK_LIBS) $(AZTECOO_LIBS) $(EPETRA_LIBS) $(MF_LIB) $(TEUCHOS_LIBS) @LIBS@ @FLIBS@
@USING_GNUMAKE_TRUE@LOCA_LIBS = $(shell @PERL_EXE@ @abs_top_srcdir@/config/strip_dup_libs.pl $(LOCA_LIBS_BASE))
@USING_GNUMAKE_FALSE@LOCA_LIBS     = $(LOCA_LIBS_BASE)

