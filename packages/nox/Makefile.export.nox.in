LOCA_EPETRA_TEST_INCLUDES_BASE = -I@abs_top_srcdir@/test/utils -I@abs_top_srcdir@/test/epetra/LOCA_TestProblems $(LOCA_INCLUDES) -I@abs_top_srcdir@/test/utils
