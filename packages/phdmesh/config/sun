THIS_FILE=${PHDMESH_PATH}/config/sun

export PHDMESH_CONFIG_DEPS="${PHDMESH_CONFIG_DEPS} ${THIS_FILE}"

#-----------------------------------------------------------------------

export AR="ar"

export ARFLAGS="-rc"

export RANLIB="echo"

#-----------------------------------------------------------------------

export CC="cc"
export CXX="CC"
export LDCXX="${CXX}"

# 64Bit build

CFLAGS_INC="-I. -I${PHDMESH_PATH}/include"

CFLAGS64="-xtarget=native64 -xarch=native64"

export CFLAGS="-xc99 ${CFLAGS} ${CFLAGS64} -errwarn=%all ${CFLAGS_INC}"

export CXXFLAGS="${CXXFLAGS} ${CFLAGS64} -library=stlport4 -xwe ${CFLAGS_INC}"

export C_LIB_EXT="${C_LIB_EXT}     -lpthread"
export CXX_LIB_EXT="${CXX_LIB_EXT} -lpthread"

#-----------------------------------------------------------------------

while [ -n "${1}" ] ; do

case $1 in
DEBUG | debug | DBG | dbg )
  shift 1
  export CFLAGS="${CFLAGS} -g"
  export CXXFLAGS="${CXXFLAGS} -g"
  ;;
OPT* | opt* )
  shift 1
  export CFLAGS="${CFLAGS} -xO4"
  export CXXFLAGS="${CXXFLAGS} -xO4"
  ;;
PURIFY | purify )
  shift 1
  export LDCXX="purify ${CXX}"
  ;;
MPI | mpi )
  shift 1
  export CC="mpcc"
  export CXX="mpCC"
  export LDCXX="${CXX}"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define PHDMESH_HAS_MPI\n"
  ;;
* )
  echo ${THIS_FILE} 'unknown option =' ${1}
  exit -1
  ;;
esac

done

${CXX} -V -xe
${CC} -V -xe

#-----------------------------------------------------------------------

source ${PHDMESH_PATH}/config/fortran LOWER_

#-----------------------------------------------------------------------

