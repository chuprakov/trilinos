THIS_FILE=${PHDMESH_PATH}/config/pgi

export PHDMESH_CONFIG_DEPS="${PHDMESH_CONFIG_DEPS} ${THIS_FILE}"

#-----------------------------------------------------------------------

export AR="ar"

export ARFLAGS="rc"

export RANLIB="ranlib"

#-----------------------------------------------------------------------

export CC="pgcc"
export CXX="pgCC"
export LDCXX="${CXX}"

CFLAGS_INC="-I. -I${PHDMESH_PATH}/include"
CFLAGS_DIAG=""
CXXFLAGS_DIAG=""

LIB_PTHREADS="-lpthread"

export CFLAGS="-c99 ${CFLAGS} ${CFLAGS_DIAG} ${CFLAGS_INC}"
export CXXFLAGS="${CXXFLAGS} ${CXXFLAGS_DIAG} ${CFLAGS_INC}"

#-----------------------------------------------------------------------

while [ -n "${1}" ] ; do

case ${1} in
DEBUG | debug | DBG | dbg )
  shift 1
  export CFLAGS="${CFLAGS} -g"
  export CXXFLAGS="${CXXFLAGS} -g"
  ;;
OPT* | opt* )
  shift 1
  export CFLAGS="${CFLAGS} -O4"
  export CXXFLAGS="${CXXFLAGS} -O4"
  ;;
MPI | mpi )
  shift 1
  export CC="mpicc"
  export CXX="mpiCC"
  export LDCXX="${CXX}"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define HAVE_MPI\n"
  ;;
MPICH | mpich )
  shift 1
  export CC="mpicc"
  export CXX="mpiCC"
  export LDCXX="${CXX}"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define HAVE_MPI\n"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define MPICH_SKIP_MPICXX\n"
  ;;
REDSTORM | redstorm )
  shift 1
  export CC="cc"
  export CXX="CC"
  export LDCXX="${CXX}"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define HAVE_MPI\n"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define MPICH_SKIP_MPICXX\n"
  export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define NO_PTHREADS\n"
  LIB_PTHREADS=""
  ;;
*)
  echo ${THIS_FILE} 'unknown option $1 =' ${1}
  exit -1
  ;;
esac

done

export C_LIB_EXT="${C_LIB_EXT}     ${LIB_PTHREADS}"
export CXX_LIB_EXT="${CXX_LIB_EXT} ${LIB_PTHREADS}"


${CXX} -V
${CC}  -V

#-----------------------------------------------------------------------

source ${PHDMESH_PATH}/config/fortran LOWER_

#-----------------------------------------------------------------------


