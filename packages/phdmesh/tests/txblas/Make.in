TEST_TXBLAS_EXE = test_txblas.exe

TEST_TXBLAS_SRC_DIR = $(PHDMESH_PATH)/tests/txblas

TEST_TXBLAS_OBJ_FILES =	\
	test_accuracy.o	\
	test_performance.o	\
	test_txblas.o

#-----------------------------------------------------------------------

test_txblas_all : $(TEST_TXBLAS_EXE)

test_txblas_run : $(TEST_TXBLAS_EXE)
	cp $(TEST_TXBLAS_SRC_DIR)/test_txblas.i .
	$(RUN) ./$(TEST_TXBLAS_EXE) test_txblas.i > test_txblas.log

test_txblas_clean :
	rm -f $(TEST_TXBLAS_EXE) $(TEST_TXBLAS_OBJ_FILES) \
		test_txblas.i test_txblas.log

#-----------------------------------------------------------------------

vpath %.c   $(TEST_TXBLAS_SRC_DIR)
vpath %.cpp $(TEST_TXBLAS_SRC_DIR)

#-----------------------------------------------------------------------

$(TEST_TXBLAS_OBJ_FILES) : $(TXBLAS_INC_DEPS) $(UTIL_INC_DEPS)

$(TEST_TXBLAS_EXE)	:	\
			$(TEST_TXBLAS_OBJ_FILES)	\
			$(TXBLAS_LIB) $(UTIL_LIB)
	$(LDCXX) $(CXXFLAGS) $(LDFLAGS) -L. -o $@	\
			$(TEST_TXBLAS_OBJ_FILES)	\
			$(TXBLAS_LIB_LINK)	\
			$(UTIL_LIB_LINK)	\
			$(CXX_LIB_EXT)

#-----------------------------------------------------------------------

