MESHIO_INC_DIR = $(PHDMESH_PATH)/include/mesh_io

MESHIO_INC_FILES =	\
	$(MESHIO_INC_DIR)/ExoII.hpp

MESHIO_OBJ_FILES =	\
	MeshIO_ExoII.o

MESHIO_INC_DEPS = $(MESHIO_INC_FILES) $(ELEMENT_INC_DEPS) $(MESH_INC_DEPS)

MESHIO_LIB = libphdmesh_meshio.a

MESHIO_LIB_LINK = -lphdmesh_meshio

$(MESHIO_OBJ_FILES) : $(MESHIO_INC_DEPS)

$(MESHIO_LIB) : $(MESHIO_OBJ_FILES)
	rm -f $@
	$(AR) $(ARFLAGS) $@ $^
	$(RANLIB) $@

mesh_io_all : $(MESHIO_LIB) ;

mesh_io_clean : ; rm -f $(MESHIO_LIB) $(MESHIO_OBJ_FILES)

mesh_io_install : $(MESHIO_LIB) config_install
	@ cp $(MESHIO_LIB) $(PHDMESH_INSTALL)/$(MESHIO_LIB)

mesh_io_uninstall :
	@ rm -f $(PHDMESH_INSTALL)/$(MESHIO_LIB)

