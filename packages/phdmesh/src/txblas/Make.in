TXBLAS_INC_DIR = $(PHDMESH_PATH)/include/txblas

TXBLAS_INC_FILES =	\
	$(TXBLAS_INC_DIR)/reduction.h	\
	$(TXBLAS_INC_DIR)/Reduction.hpp	\
	$(TXBLAS_INC_DIR)/CR4Matrix.hpp	\
	$(TXBLAS_INC_DIR)/cr4_mxv.h

TXBLAS_OBJ_FILES =	\
	txblas_axpby.o	\
	txblas_reduction.o	\
	txblas_CR4Matrix.o	\
	txblas_cr4_mxv.o

TXBLAS_INC_DEPS = $(TXBLAS_INC_FILES) $(UTIL_INC_DEPS) $(CONFIG_FILE)

TXBLAS_LIB = libphdmesh_txblas.a

TXBLAS_LIB_LINK = -lphdmesh_txblas

$(TXBLAS_OBJ_FILES) : $(TXBLAS_INC_DEPS)

$(TXBLAS_LIB) : $(TXBLAS_OBJ_FILES)
	rm -f $@
	$(AR) $(ARFLAGS) $@ $^
	$(RANLIB) $@

txblas_all : $(TXBLAS_LIB) ;

txblas_clean : ; rm -f $(TXBLAS_LIB) $(TXBLAS_OBJ_FILES)

txblas_install : $(TXBLAS_LIB) config_install
	@ cp $(TXBLAS_LIB) $(PHDMESH_INSTALL)/$(TXBLAS_LIB)

txblas_uninstall :
	@ rm -f $(PHDMESH_INSTALL)/$(TXBLAS_LIB)

