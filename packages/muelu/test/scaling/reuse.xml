<ParameterList name="MueLu">

  <!-- Configuration of the Xpetra operator (fine level) -->
  <ParameterList name="Matrix">
    <Parameter name="number of equations"                   type="int" value="2"/> <!-- Number of PDE equations at each grid node.-->
  </ParameterList>

  <!-- NOTE: you can embed factory definitions:

    <ParameterList name="myRestrictorFact">
      <Parameter name="factory" type="string" value="TransPFactory"/>
      <ParameterList name="P">
        <Parameter name="factory"  type="string" value="SaPFactory"/>
      </ParameterList>
    </ParameterList>
  -->

  <!-- Factory collection -->
  <!-- Note that ParameterLists must be defined prior to being used -->
  <ParameterList name="Factories">

    <!-- =======================  FILTERING  ======================= -->
    <ParameterList name="myCoalesceDropFact">
      <Parameter name="factory"                             type="string" value="CoalesceDropFactory"/>
      <!-- <Parameter name="lightweight wrap"                    type="bool"   value="true"/> -->
      <!-- <Parameter name="aggregation: drop scheme"            type="string" value="distance laplacian"/> -->
      <!-- <Parameter name="aggregation: drop tol"               type="double" value="0.00"/> -->
    </ParameterList>

    <ParameterList name="myFilteredAFact">
      <Parameter name="factory"                             type="string" value="FilteredAFactory"/>
      <Parameter name="Graph"                               type="string" value="myCoalesceDropFact"/>
      <Parameter name="filtered matrix: use lumping"        type="bool"   value="false"/>
    </ParameterList>

    <!-- =======================  AGGREGATION  ======================= -->
    <ParameterList name="CoupledAggregationFact">
      <Parameter name="factory"                             type="string" value="CoupledAggregationFactory"/>
      <Parameter name="Graph"                               type="string" value="myCoalesceDropFact"/>
      <Parameter name="aggregation: ordering"                            type="string" value="natural"/>
      <Parameter name="aggregation: max selected neighbors"             type="int"    value="0"/>
      <Parameter name="Phase3AggCreation"                   type="double" value="0.5"/>
      <!-- Keep it 2, otherwise nothing is aggregated -->
      <Parameter name="aggregation: min agg size"           type="int"    value="2"/>
    </ParameterList>

    <ParameterList name="UncoupledAggregationFact">
      <Parameter name="factory"                             type="string" value="UncoupledAggregationFactory"/>
      <Parameter name="Graph"                               type="string" value="myCoalesceDropFact"/>
      <Parameter name="DofsPerNode"                         type="string" value="myCoalesceDropFact"/>
      <Parameter name="aggregation: ordering"                            type="string" value="natural"/>
      <Parameter name="aggregation: max selected neighbors"             type="int"    value="0"/>
      <!-- Keep it 2, otherwise nothing is aggregated -->
      <Parameter name="aggregation: min agg size"           type="int"    value="2"/>
    </ParameterList>

    <ParameterList name="UserAggregationFact">
      <Parameter name="factory"                             type="string" value="UserAggregationFactory"/>
      <Parameter name="filePrefix"                          type="string" value="bdata/agg"/>
      <Parameter name="fileExt"                             type="string" value="txt"/>
    </ParameterList>

    <ParameterList name="myAggExportFact">
      <Parameter name="factory"                             type="string" value="AggregationExportFactory"/>
      <Parameter name="DofsPerNode"                         type="string" value="myCoalesceDropFact"/>
    </ParameterList>

    <!-- =======================  SMOOTH AGGREGATION  ======================= -->
    <ParameterList name="myTentativePFact">
      <Parameter name="factory"                             type="string" value="TentativePFactory"/>
    </ParameterList>

    <!-- =======================  ENERGY MINIMIZATION  ======================= -->
    <!-- <ParameterList name="myNullspaceFact"> -->
      <!-- <Parameter name="factory"                             type="string" value="NullspacePresmoothFactory"/> -->
    <!-- </ParameterList> -->

    <ParameterList name="myPatternFact">
      <Parameter name="factory"                             type="string" value="PatternFactory"/>
      <Parameter name="P"                                   type="string" value="myTentativePFact"/>
      <Parameter name="k"                                   type="int"    value="1"/>
    </ParameterList>

    <ParameterList name="myConstraintFact">
      <Parameter name="factory"                             type="string" value="ConstraintFactory"/>
      <Parameter name="Ppattern"                            type="string" value="myPatternFact"/>
      <!-- <Parameter name="FineNullspace"                       type="string" value="myNullspaceFact"/> -->
      <Parameter name="CoarseNullspace"                     type="string" value="myTentativePFact"/>
    </ParameterList>

    <ParameterList name="myProlongatorFact">
      <Parameter name="factory"                             type="string" value="EminPFactory"/>
      <Parameter name="P"                                   type="string" value="myTentativePFact"/>
      <Parameter name="Constraint"                          type="string" value="myConstraintFact"/>
      <!-- <Parameter name="Nullspace"                           type="string" value="myNullspaceFact"/> -->
      <Parameter name="Niterations"                         type="int"    value="3"/>
      <Parameter name="Reuse Niterations"                   type="int"    value="1"/>
      <Parameter name="Keep P0"                             type="bool"   value="true"/>
      <Parameter name="Keep Constraint0"                    type="bool"   value="true"/>
    </ParameterList>

    <ParameterList name="myRestrictorFact">
      <Parameter name="factory"                             type="string" value="TransPFactory"/>
      <Parameter name="P"                                   type="string" value="myProlongatorFact"/>
    </ParameterList>

    <ParameterList name="myRAPFact">
      <Parameter name="factory"                             type="string" value="RAPFactory"/>
      <Parameter name="P"                                   type="string" value="myProlongatorFact"/>
      <Parameter name="R"                                   type="string" value="myRestrictorFact"/>
      <Parameter name="Keep AP Pattern"                     type="bool"   value="true"/>
      <Parameter name="Keep RAP Pattern"                    type="bool"   value="true"/>
    </ParameterList>

    <!-- =======================  SMOOTHERS  ======================= -->

    <ParameterList name="Chebyshev">
      <Parameter name="factory"                             type="string" value="TrilinosSmoother"/>
      <Parameter name="type"                                type="string" value="CHEBYSHEV"/>

      <ParameterList name="ParameterList">
        <Parameter name="chebyshev: degree"                 type="int"     value="2"/>>
        <!-- Ratio: 7 in 2D, 20 in 3D -->
        <Parameter name="chebyshev: ratio eigenvalue"       type="double"  value="20"/>
        <Parameter name="chebyshev: min eigenvalue"         type="double"  value="1.0"/>
        <Parameter name="chebyshev: zero starting solution" type="bool"    value="true"/>
      </ParameterList>
    </ParameterList>

    <ParameterList name="SymGaussSeidel">
      <Parameter name="factory"                             type="string" value="TrilinosSmoother"/>
      <Parameter name="type"                                type="string" value="RELAXATION"/>

      <ParameterList name="ParameterList">
        <Parameter name="relaxation: type"                  type="string" value="Symmetric Gauss-Seidel"/>
        <Parameter name="relaxation: sweeps"                type="int"    value="2"/>
        <Parameter name="relaxation: damping factor"        type="double" value="1"/>
      </ParameterList>
    </ParameterList>

  </ParameterList>

  <!-- Definition of the multigrid preconditioner -->
  <ParameterList name="Hierarchy">

    <Parameter name="max levels"                            type="int"      value="6"/>         <!-- Max number of levels -->
    <Parameter name="coarse: max size"                      type="int"      value="500"/>       <!-- Min number of rows on coarsest level -->
    <Parameter name="verbosity"                             type="string"   value="High"/>
    <Parameter name="reuse"                                 type="bool"     value="true"/>      <!-- Allow factories to call Build method multiple times -->
    <!-- <Parameter name="dependencyOutputLevel"                 type="int"      value="0"/> -->

    <ParameterList name="All">
      <Parameter name="startLevel"                          type="int"      value="0"/>
      <Parameter name="Smoother"                            type="string"   value="Chebyshev"/>
      <!-- <Parameter name="Smoother"                            type="string"   value="SymGaussSeidel"/> -->
      <Parameter name="A"                                   type="string"   value="myRAPFact"/>
      <Parameter name="P"                                   type="string"   value="myProlongatorFact"/>
      <Parameter name="R"                                   type="string"   value="myRestrictorFact"/>
      <Parameter name="Aggregates"                          type="string"   value="UncoupledAggregationFact"/>
      <!-- <Parameter name="Aggregates"                          type="string"   value="UserAggregationFact"/> -->
      <Parameter name="Nullspace"                           type="string"   value="myTentativePFact"/>
      <Parameter name="Graph"                               type="string"   value="myCoalesceDropFact"/>
      <Parameter name="CoarseSolver"                        type="string"   value="DirectSolver"/>
    </ParameterList>

  </ParameterList>
</ParameterList>
