#!/usr/bin/perl -w
#
# This script generates sample output from any different
# programs in Thyra that is then automatically written
# into the source tree whenever the test harness is run.
# This output is then read into the doxygen documentation.
#
# This script must be run from
#
#  TRILINOS_BUILD_DIR/packages/thyra/test
#
# and it will be when run by the test harness.
#

#
# Things you do *NOT* have to change!
#

use strict;

my $abs_top_srcdir = "@abs_top_srcdir@";

sub run_cmnd {
  my $cmnd = shift;
  my $output_file = shift;
  my $total_cmnd = "$cmnd 2>&1 | tee $output_file";
  print "\nRunning command:\n\n$total_cmnd\n";
  system($total_cmnd);
}

#
# Things you change for your package
#

run_cmnd(
  "../example/simple_stratimikos_example.exe --echo-command-line --help"
  ,"$abs_top_srcdir/example/simple_stratimikos_example.help.out"
  );

run_cmnd(
  "../example/simple_stratimikos_example.exe --echo-command-line --matrix-file=../example/FourByFour.mtx --linear-solver-params-file=../example/amesos.klu.xml"
  ,"$abs_top_srcdir/example/simple_stratimikos_example.amesos.klu.out"
  );

run_cmnd(
  "../example/simple_stratimikos_example.exe --teuchos-suppress-startup-banner --only-print-options --print-readable-format --show-doc"
  ,"$abs_top_srcdir/example/simple_stratimikos_example.options.readablewithdoc.out"
  );

run_cmnd(
  "../example/simple_stratimikos_example.exe --teuchos-suppress-startup-banner --only-print-options --print-readable-format --hide-doc"
  ,"$abs_top_srcdir/example/simple_stratimikos_example.options.readable.out"
  );

run_cmnd(
  "../example/simple_stratimikos_example.exe --teuchos-suppress-startup-banner --only-print-options --print-xml-format"
  ,"$abs_top_srcdir/example/simple_stratimikos_example.options.xml.out"
  );

run_cmnd(
