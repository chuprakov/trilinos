<ParameterList>

  <!-- Configuration of the Xpetra operator (fine level) -->
  <ParameterList name="Matrix">
    <Parameter name="PDE equations" type="int" value="1"/> <!-- Number of PDE equations at each grid node.-->
  </ParameterList>

  <!-- Factory collection -->
  <ParameterList name="Factories">

    <ParameterList name="Chebyshev"> <!-- interpreter not tested yet -->
      <Parameter name="factory" type="string" value="TrilinosSmoother"/>
      <Parameter name="type" type="string" value="CHEBYSHEV"/>
      <ParameterList name="ParameterList">
        <Parameter name="chebyshev: degree"                 type="int"     value="3"/>>
        <Parameter name="chebyshev: ratio eigenvalue"       type="double"  value="20"/>  <!-- 7 for 2D, 20 for 3D -->
        <Parameter name="chebyshev: min eigenvalue"         type="double"  value="1.0"/>
        <Parameter name="chebyshev: zero starting solution" type="bool"    value="true"/>
      </ParameterList>
    </ParameterList>

  </ParameterList>

  <!-- Definition of the multigrid preconditioner -->
  <ParameterList name="Hierarchy">

    <Parameter name="numDesiredLevel" type="int"    value="4"/>   <!-- Max number of levels -->
    <Parameter name="maxCoarseSize"   type="int"    value="500"/>  <!-- Min number of rows on coarsest level -->
    <Parameter name="verbosity"       type="string" value="High"/> <!-- None, Low, Medium, High, Extreme -->

    <ParameterList name="FineLevel">
      <Parameter name="startLevel"  type="int"    value="0"/>
      <Parameter name="Smoother"    type="string" value="Chebyshev"/>
      <Parameter name="CoarseSolver" type="string" value="Chebyshev"/>
      <!-- <Parameter name="numDesiredLevel" type="int" value="2"/> -->
    </ParameterList>

    <!--
       <ParameterList name="OtherLevels">
         <Parameter name="startLevel"  type="int"    value="2"/>
         <Parameter name="Smoother"    type="string" value="Chebyshev"/>
       </ParameterList>

       <ParameterList name="CoarsestLevel">
         <Parameter name="startLevel"   type="int" value="-1"/>
         <Parameter name="CoarseSolver" type="string" value="None"/>
       </ParameterList>
       -->

  </ParameterList>
</ParameterList>
