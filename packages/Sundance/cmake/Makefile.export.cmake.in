##############################################################################
#
# Makefile macros for use by Trilinos clients. 
#
##############################################################################


## Compilers used by Trilinos build
CXX_COMPILER=@CMAKE_CXX_COMPILER@
C_COMPILER=@CMAKE_C_COMPILER@
FORTRAN_COMPILER=@CMAKE_Fortran_COMPILER@

## Compiler flags used by Trilinos build
TRILINOS_CXX_FLAGS=@CMAKE_CXX_FLAGS@
TRILINOS_C_FLAGS=@CMAKE_C_FLAGS@
TRILINOS_FORTRAN_FLAGS=@CMAKE_FORTRAN_FLAGS@

## Extra link flags (e.g., specification of fortran libraries)
TRILINOS_EXTRA_LD_FLAGS=@Trilinos_EXTRA_LINK_FLAGS@

## List of Trilinos libraries
TRILINOS_LIBRARIES=@LIB_STR@

## List of TPLs required by Trilinos
TRILINOS_TPL_LIBRARIES=@TPL_LIB_STR@

## Specification of directories for TPL headers
TRILINOS_TPL_INCLUDE=@TPL_INCLUDE_STR@


