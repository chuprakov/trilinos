<ParameterList>
  <Parameter name="Use Physics Prec" type="bool" value="1"/>

  <ParameterList name="P1 Solver">
    <Parameter name="Preconditioner Type" type="string" value="ML"/>
    <ParameterList name="Preconditioner Types">
      <ParameterList name="Ifpack">
        <Parameter name="Overlap" type="int" value="0"/>
        <Parameter name="Prec Type" type="string" value="ILU"/>
        <ParameterList name="Ifpack Settings">
          <Parameter name="fact: level-of-fill" type="int" value="7"/>
        </ParameterList>
        <ParameterList name="VerboseObject">
          <Parameter name="Verbosity Level" type="string" value="medium"/>
        </ParameterList>
      </ParameterList>
      <ParameterList name="ML">
        <Parameter name="Base Method Defaults" type="string" value="DD" />
        <ParameterList name="ML Settings">
          <Parameter name="PDE equations" type="int" value="1" />
          <Parameter name="coarse: type" type="string" value="Amesos-KLU" />
          <Parameter name="max levels" type="int" value="3" />
          <Parameter name="prec type" type="string" value="MGV" />
          <ParameterList name="smoother: ifpack list">
            <Parameter name="amesos: solver type" type="string" value="Amesos_Klu" />
          </ParameterList>
          <Parameter name="smoother: ifpack overlap" type="int" value="4" />
          <Parameter name="smoother: ifpack type" type="string" value="Amesos"/>
          <Parameter name="smoother: pre or post" type="string" value="post"/>
          <Parameter name="smoother: type" type="string" value="IFPACK" />
        </ParameterList>
      </ParameterList>
    </ParameterList>
  </ParameterList>
  
  <ParameterList name="P2 Solver">
    <Parameter name="Linear Solver Type" type="string" value="AztecOO"/>
    <Parameter name="Preconditioner Type" type="string" value="Ifpack"/>
    <ParameterList name="Linear Solver Types">
      <ParameterList name="AztecOO">
        <Parameter name="Output Every RHS" type="bool" value="1"/>
        <ParameterList name="Forward Solve">
          <Parameter name="Max Iterations" type="int" value="400"/>
          <Parameter name="Tolerance" type="double" value="1e-2"/>
          <ParameterList name="AztecOO Settings">
            <Parameter name="Aztec Preconditioner" type="string" value="none"/>
            <Parameter name="Aztec Solver" type="string" value="GMRES"/>
            <Parameter name="Output Frequency" type="int" value="1"/>
          </ParameterList>
        </ParameterList>
        <ParameterList name="VerboseObject">
          <Parameter name="Verbosity Level" type="string" value="medium"/>
        </ParameterList>
      </ParameterList>
    </ParameterList>
    <ParameterList name="Preconditioner Types">
      <ParameterList name="Ifpack">
        <Parameter name="Overlap" type="int" value="0"/>
        <Parameter name="Prec Type" type="string" value="ILU"/>
        <ParameterList name="Ifpack Settings">
          <Parameter name="fact: level-of-fill" type="int" value="3"/>
        </ParameterList>
        <ParameterList name="VerboseObject">
          <Parameter name="Verbosity Level" type="string" value="medium"/>
        </ParameterList>
      </ParameterList>
    </ParameterList>
  </ParameterList>

  <Parameter name="Solve Tol" type="double" value="2e-2"/>
 
</ParameterList>
