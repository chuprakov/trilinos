#Script for building Zoltan and Isorropia on a 64-bit Linux workstation
#with OpenMPI.
#This script builds only Zoltan but builds it from the top-level Trilinos
#directory.
#Assuming running script from 
#/Net/local/homes/kddevin/code/trilinos_v9.0/Obj_linux64.
set path=(/usr/local/bin $path)
setenv CFLAGS -m64
setenv CXXFLAGS -m64
setenv CPPFLAGS -m64
setenv FFLAGS -m64

../configure -C \
  --prefix=/Net/local/homes/kddevin/code/trilinos_v9.0/Obj_linux64 \
  --disable-default-packages \
  --enable-mpi --with-mpi-compilers \
  --enable-epetra \
  --enable-epetraext \
  --enable-isorropia \
  --enable-zoltan \
  --with-parmetis \
  --with-parmetis-incdir="/Net/local/proj/zoltan/arch/all/src/ParMETIS3_1" \
  --with-parmetis-libdir="/Net/local/proj/zoltan/arch/linux64/lib/openmpi/ParMETIS3_1" \
  --with-gnumake |& tee OUTPUT.C
make everything |& tee OUTPUT.M
make install |& tee OUTPUT.I
