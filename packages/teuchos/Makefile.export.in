##########################################################################
#
# Macro definitions to be exported from Teuchos to clients.
# 
# -- KL 9 August 2004
#
#
# To link with everything required by Teuchos, simply add 
# $(TEUCHOS_EXPORT_LIBS) to the linker command line in your Makefile.
#
##########################################################################

TEUCHOS_EXPORT_LIBS = -L$(TEUCHOS_BUILD_DIRECTORY)/src  -lteuchos \
                      $(TEUCHOS_MPI_LIBDIR) $(TEUCHOS_MPI_LIBS)



##########################################################################
#
# Set the absolute path to the Teuchos build directory
#
##########################################################################

TEUCHOS_BUILD_DIRECTORY = @TEUCHOS_BUILD_DIRECTORY@





############################################################################
#
# Export compiler settings 
#
############################################################################

# Extra definitions
TEUCHOS_DEFS = @DEFS@

# Fortran compilation flags
TEUCHOS_FFLAGS = @FFLAGS@

# C compilation flags
TEUCHOS_CFLAGS = @CFLAGS@

# C++ compilation flags
TEUCHOS_CXXFLAGS = @CXXFLAGS@

# linker flags
TEUCHOS_LDFLAGS = @LDFLAGS@


############################################################################
#
# Export the ranlib and archiver to be used
#
############################################################################

TEUCHOS_RANLIB = @RANLIB@



############################################################################
#
# Export MPI settings 
#
############################################################################

# MPI libraries
TEUCHOS_MPI_LIBS = @MPI_LIBS@

# MPI include path
TEUCHOS_MPI_INC = @MPI_INC@

# Path to MPI libraries
TEUCHOS_MPI_LIBDIR = @MPI_LIBDIR@

# Path to MPI root
TEUCHOS_MPI_DIR = @MPI_DIR@


############################################################################
#
# Export Fortran, BLAS, and LAPACK libraries
#
############################################################################

# Fortran & standard math libs
TEUCHOS_FLIBS = @FLIBS@

# BLAS libraries
TEUCHOS_BLAS_LIBS = @BLAS_LIBS@

# LAPACK libraries
TEUCHOS_LAPACK_LIBS = @LAPACK_LIBS@

# Extra libraries
TEUCHOS_EXTRA_LIBS = @LIBS@

