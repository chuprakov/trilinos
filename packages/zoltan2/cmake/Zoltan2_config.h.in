#include <Teuchos_config.h>

/* define if we have MPI */
#cmakedefine HAVE_MPI

/* define if we have the METIS library*/
#cmakedefine HAVE_METIS

/* define if we have the PaToH library*/
#cmakedefine HAVE_PATOH

/* define if we have the Scotch library*/
#cmakedefine HAVE_SCOTCH

/* define if we have the ParMETIS library*/
#cmakedefine HAVE_PARMETIS

/* define if we have the AMD library*/
#cmakedefine HAVE_AMD

/* define if we have the Ovis library*/
#cmakedefine HAVE_OVIS

/* define if we have built Zoltan2 with 64-bit
 * third party libraries.  Needed by tests
 * which use third party libraries.
 */
#cmakedefine HAVE_TPL64

/* define if malloc.h has mallinfo() and you 
 * want to build Zoltan_Mallinfo.cpp.
 */
#cmakedefine HAVE_MALLINFO

/* define to turn on runtime display of
 * total memory committed at points throughout
 * the execution of zoltan2
 */
#cmakedefine SHOW_LINUX_MEMINFO

/* define to turn on runtime display of
 * maximum memory used by scotch
 * (requires a hack to the scotch library)
 */
#cmakedefine SHOW_SCOTCH_HIGH_WATER_MARK

#ifdef HAVE_TEUCHOS_LONG_LONG_INT

/* Define if this platform has data type "long long"
 *  Because of our heavy dependence on Teuchos, we
 *  can't use LONG_LONG unless Teuchos is using
 *  long long.
 */
#cmakedefine ZOLTAN2_HAVE_LONG_LONG

#endif
